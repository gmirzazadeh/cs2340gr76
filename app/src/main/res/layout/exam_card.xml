<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/examCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/displayExamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@null"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="Exam Name"/>
        <TextView
            android:id="@+id/displayExamLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/displayExamName"
            android:background="@null"
            android:layout_margin="1dp"
            android:textSize="13sp"
            android:textStyle="italic"
            tool:text="Exam Location"/>
        <TextView
            android:id="@+id/displayExamDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/displayExamLocation"
            android:background="@null"
            android:layout_margin="1dp"
            android:textSize="13sp"
            android:textStyle="italic"
            tool:text="Exam Date"/>
        <TextView
            android:id="@+id/displayExamDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/displayExamDate"
            android:layout_margin="3dp"
            android:background="@null"
            android:textSize="13sp"
            tool:text="Exam Detail This is some details about the upcoming exam teihfaivj;sldfkja;weifjads"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>